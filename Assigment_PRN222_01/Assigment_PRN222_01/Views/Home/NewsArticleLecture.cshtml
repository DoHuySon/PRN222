@model IEnumerable<Assigment_PRN222_01.Models.NewsArticle>

@{
    ViewData["Title"] = "Danh sách bài báo";
}

<h2 class="text-center mt-3">📜 Danh sách Bài Báo</h2>

<!-- Form tìm kiếm với giao diện đẹp hơn -->
<form asp-action="Search" method="get" class="mb-3">
    <div class="input-group">
        <input type="text" name="keyword" placeholder="🔍 Nhập từ khóa..." class="form-control" />
        <button type="submit" class="btn btn-primary">Tìm kiếm</button>
    </div>
</form>

<!-- Bảng hiển thị danh sách bài báo -->
<table class="table table-striped table-hover table-bordered text-center">
    <thead class="table-dark">
        <tr>
            <th>@Html.DisplayNameFor(model => model.NewsTitle)</th>
            <th>@Html.DisplayNameFor(model => model.Headline)</th>
            <th>@Html.DisplayNameFor(model => model.CreatedDate)</th>
            <th>@Html.DisplayNameFor(model => model.NewsContent)</th>
            <th>Thao tác</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@Html.DisplayFor(modelItem => item.NewsTitle)</td>
                <td>@Html.DisplayFor(modelItem => item.Headline)</td>
                <td>@Html.DisplayFor(modelItem => item.CreatedDate)</td>
                <td>@Html.DisplayFor(modelItem => item.NewsContent)</td>
                <td>
                    <a asp-action="DetailsNewArticle" asp-route-id="@item.NewsArticleId" class="btn btn-info btn-sm">👁 Xem</a>
                </td>
            </tr>
        }
    </tbody>
</table>
