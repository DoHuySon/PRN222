<Window x:Class="Lab2_HttpClient.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Lab2_HttpClient"
        mc:Ignorable="d"
        Title="Using HttpClient" Height="450" Width="595">
    <Grid>
        <StackPanel>
            <Label Background="#FF73DDF4">URL</Label>
            <TextBox  Name="lblURL" Height="23"></TextBox>
            <Label  Background="#FF73DDF4">HTML Source</Label>
            <TextBox Name="lbContent" Height="294"></TextBox>
            <WrapPanel Background="#FF73DDF4">
                <Button Width="70" Margin="95,0,0,0" Click="btnViewHTML_Click" > View HTML</Button>
                <Button Width="70" Margin="100,0,100,0" Click="btnClear_Click" >Clear</Button>
                <Button Width="70" Click="btnClose_Click" >Close</Button>
            </WrapPanel>
        </StackPanel>
    </Grid>
</Window>
