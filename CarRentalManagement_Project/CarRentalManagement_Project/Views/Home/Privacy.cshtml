    @*     <label for="MaLoaiXe">Chọn loại xe:</label> *@
    @*     <select name="MaLoaiXe" id="MaLoaiXe" onchange="this.form.submit()"> *@
    @*         <option value="">-- Tất cả --</option> *@
    @*         @foreach (var loaiXe in ViewBag.LoaiXes) *@
    @*         { *@
    @*             <option value="@loaiXe.MaLoaiXe" selected="@(loaiXe.MaLoaiXe.ToString() == ViewBag.SelectedLoaiXe ? "selected" : null)"> *@
    @*                 @loaiXe.TenLoaiXe *@
    @*             </option> *@
    @*         } *@
    @*     </select> *@
    @* </form> *@
    <div class="car-grid">
        @foreach (var item in Model)
        {
            <div class="car-card">
                <div class="car-image">
                    <img src="@Html.DisplayFor(modelItem => item.HinhAnh)" />

                    @* <img src="https://via.placeholder.com/300x200" alt="Toyota Veloz Cross 2022"> *@
                    @* <div class="discount-tag">Giảm 13%</div> *@
                </div>
                <div class="car-details">
                    <div class="car-title">@Html.DisplayFor(modelItem => item.MaLoaiXeNavigation.TenLoaiXe)</div>
                    <div class="car-info">
                        <div class="rental-tags">
                            <div class="tag">@Html.DisplayFor(modelItem => item.MaLoaiXeNavigation.MoTa)</div>
                            <div class="tag">@Html.DisplayFor(modelItem => item.TrangThai)</div>
                        </div>
                    </div>
                    <div class="car-specs">
                        <span>@Html.DisplayFor(modelItem => item.MauXe)</span>
                        <span>@Html.DisplayFor(modelItem => item.HangXe)</span>
                        <span>@Html.DisplayFor(modelItem => item.NamSanXuat)</span>
                    </div>
                    <div class="car-price">
                        <div class="rating">
                            ★ 5.0
                            <span>(45 chuyến)</span>
                        </div>
                        <div class="price">@Html.DisplayFor(modelItem => item.GiaThueMotNgay)/ngày</div>
                    </div>
                </div>
            </div>
        }
    </div>
</body>
</html>